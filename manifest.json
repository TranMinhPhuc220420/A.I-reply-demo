{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0.0",
    "default_locale": "ja",
    "permissions": [
        "activeTab",
        "sidePanel",
        "storage",
        "identity",
        "identity.email",
        "scripting"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; script-src-elem 'self' https://apis.google.com https://ajax.googleapis.com https://www.googleapis.com https://*.firebaseio.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://*.firebasedatabase.app;object-src 'self'"
    },
    "content_scripts": [
        {
            "matches": [
                "*://mail.google.com/*"
            ],
            "css": [
                "styles/style.css"
            ],
            "js": [
                "third-party/crypto/core.min.js",
                "third-party/crypto/crypto-js.min.js",
                "third-party/crypto/md5.js",
                "third-party/jquery-1.10.2.min.js",
                "scripts/sateraito_lang.js",
                "scripts/common.js",
                "scripts/server_request.js",
                "scripts/util.js",
                "scripts/content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_title": "__MSG_extension_action_default_title__"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "*://mail.google.com/*"
            ],
            "resources": [
                "bootstrap.bundle.min.js",
                "scripts/script.js",
                "styles/style.css",
                "images/sateraito_logo.png",
                "images/favicon.png",
                "icons/close-icon.png",
                "icons/send-icon.png",
                "icons/black-icon.png",
                "icons/content-copy-icon.png",
                "icons/refresh-icon.png",
                "icons/account-circle-icon.svg",
                "icons/chevron_left.svg",
                "icons/chevron_right.svg",
                "icons/description-icon.svg",
                "icons/emoji-emotions-icon.svg",
                "icons/format-align-icon.svg",
                "icons/graphic-eq.svg",
                "icons/translate.svg",
                "icons/cancel.svg"
            ],
            "use_dynamic_url": true
        }
    ],
    "oauth2": {
        "client_id": "99727397567-cchum11o3p3j008plbbb1vrq0n658tto.apps.googleusercontent.com",
        "scopes": [
            "openid",
            "email",
            "profile"
        ]
    }
}